<div class="flex justify-center items-center min-h-screen ml-60">
  <div class="w-full max-w-4xl bg-white p-8 rounded shadow-md border border-gray-300">
    <%= form_with(model: [@lesson, @content], url: admin_lesson_contents_path(@lesson), local: true, html: { multipart: true }) do |form| %>

      <div class="field mb-4">
        <%= form.text_field :title, placeholder: "Title", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      
      <div class="field mb-4">
        <label for="content" class="block text-gray-700 text-sm font-bold mb-2">Content</label>
        <div class="mb-2">
          <!-- Toolbar for text formatting -->
          <div class="flex space-x-2 mb-2">
            <button type="button" onclick="document.execCommand('bold')" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-1 px-3 rounded border border-gray-300 focus:outline-none">
              <strong>B</strong>
            </button>
            <button type="button" onclick="document.execCommand('italic')" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-1 px-3 rounded border border-gray-300 focus:outline-none">
              <em>I</em>
            </button>
            <!-- Add more formatting buttons as needed -->
            <button type="button" onclick="document.execCommand('underline')" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-1 px-3 rounded border border-gray-300 focus:outline-none">
              <u>U</u>
            </button>
            <button type="button" onclick="document.execCommand('strikeThrough')" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-1 px-3 rounded border border-gray-300 focus:outline-none">
              <s>S</s>
            </button>
          </div>
        </div>
        <%= form.text_area :content, placeholder: "Artikel", id: "content", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", rows: 10 %>
      </div>

      <div class="field mb-4">
        <%= form.file_field :attachment, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="actions flex justify-end space-x-2">
        <%= form.submit "Save", class: "bg-indigo-800 text-white font-semibold py-2 px-4 rounded-lg mr-4" %>
        <%= link_to 'Batal', admin_lesson_path(@lesson), class: "bg-indigo-800 text-white font-semibold py-2 px-4 rounded-lg" %>
      </div>
    <% end %>
  </div>
</div>
