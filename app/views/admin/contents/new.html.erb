<div class="container mx-auto p-4 ml-60">
  <h1 class="text-2xl font-bold mb-4 ml-60">New Content</h1>

  <%= form_with(model: @content, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, rows: 5, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= form.submit 'Create Content', class: "bg-blue-900 text-white py-2 px-4 rounded hover:bg-blue-700" %>
    </div>
  <% end %>

  <h2 class="text-xl font-bold mt-8 mb-4 ml-60">All Content</h2>

  <ul class="space-y-4">
    <% @all_contents.each do |content| %>
      <li class="border border-gray-200 p-4 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-indigo-700"><%= content.title %></h3>
        
        <%= link_to 'Edit', edit_admin_content_path(content), class: "text-blue-500 hover:underline" %> |
        <%= link_to 'Show', admin_content_path(content), class: "text-blue-500 hover:underline" %>
      </li>
    <% end %>
  </ul>
</div>
