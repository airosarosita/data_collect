<p style="color: green"><%= notice %></p>

<div class="flex justify-center">
  <!-- Sidebar placeholder to reserve space on the left -->
  <div class="w-1/4"></div>

  <!-- Main content area centered on the remaining space -->
  <div class="max-w-4xl w-3/4 p-8 bg-white shadow-lg rounded-lg">
    <!-- Content and lesson title in the center -->
    <div class="text-center mb-6">
      <h1 class="text-3xl font-extrabold text-gray-900">Lesson</h1>
      <h2 class="text-xl font-semibold text-gray-700 mt-2"><%= @content.lesson.title %></h2> <!-- Displaying content title -->
    </div>

    <!-- Material section with lesson title above -->
    <div class="bg-gray-100 p-6 rounded-lg shadow-inner mb-6">
      <h3 class="text-lg font-semibold text-gray-600 mb-3"><%= @content.title %></h3> <!-- Displaying related lesson title -->
      <p class="text-gray-800 leading-relaxed"><%= @content.content %></p> <!-- Displaying content body -->
    </div>

    <!-- Action buttons at the bottom -->
    <div class="flex justify-center space-x-4 mt-6">
      <%= link_to "Edit", edit_admin_content_path(@content), class: "bg-blue-600 text-white py-2 px-6 rounded hover:bg-blue-500 transition ease-in-out duration-150" %>
      <%= link_to "Back", admin_contents_path, class: "bg-gray-300 text-gray-700 py-2 px-6 rounded hover:bg-gray-400 transition ease-in-out duration-150" %>
      <%= button_to "Delete", admin_content_path(@content), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white py-2 px-6 rounded hover:bg-red-500 transition ease-in-out duration-150" %>
    </div>
  </div>
</div>
