<div class="w-full max-w-6xl p-6 flex justify-center mt-36">
  <div id="<%= dom_id(lesson) %>" class="border border-gray-200 p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
    <h2 class="font-semibold text-indigo-700 text-lg mb-2"><%= lesson.title %></h2>
    <div class="mt-4">
      <%= link_to "Add Content", new_admin_lesson_content_path(@lesson), class: "bg-blue-900 text-white py-2 px-4 rounded hover:bg-blue-700" %>
    </div>
    <p> <%= lesson.context %></p>
    
    <%= link_to "Edit this lesson", edit_admin_lesson_path(@lesson) %>
    <%= button_to "Destroy this lesson", admin_lesson_path(@lesson), method: :delete%>
  </div>
</div>
