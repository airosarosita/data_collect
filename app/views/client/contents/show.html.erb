<div class="flex justify-center">
  <div class="w-full max-w-4xl px-4 sm:px-6 lg:px-8 flex flex-col ml-60">
    
    <!-- Title Section -->
    <div class="text-center mb-6">
      <h1 class="text-3xl font-extrabold text-gray-900">Lesson</h1>
      <h2 class="text-xl font-semibold text-gray-700 mt-2"><%= @content.lesson.title %></h2>
    </div>

    <!-- Content Section -->
    <div class="bg-gray-100 p-6 rounded-lg shadow-inner mb-6 flex-grow">
      <h3 class="text-lg font-semibold text-gray-600 mb-3 ml-60"><%= @content.title %></h3>
      <div class="text-gray-800 leading-relaxed">
        <%= @content.content.html_safe %>
      </div>
    </div>

    <!-- Action Buttons at the Bottom -->
    <div class="flex justify-center space-x-4 mt-6">
      <%= link_to "Back", client_lessons_path, class: "bg-gray-300 text-gray-700 py-2 px-6 rounded hover:bg-gray-400 transition ease-in-out duration-150" %>
    </div>

  </div>
</div>
