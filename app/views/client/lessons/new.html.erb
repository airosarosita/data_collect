<h1 class="t3text-lg font-bold text-gray-900 mb-2 ml-60 text-center">Tambah Lesson Baru</h1>

<div class="flex justify-center items-center min-h-screen ml-60">
  <div class="w-full max-w-4xl bg-white p-8 rounded shadow-md border border-gray-300">
    <%= form_with(model: @lesson, url: admin_lessons_path, local: true) do |form| %>
      <% if @lesson.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
          <h2 class="text-xl font-semibold mb-2"><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @lesson.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field mb-4">
        <%= form.text_field :title, placeholder: "Title", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="field mb-4">
        <%= form.rich_text_area :content, placeholder: "I am your rich text editor.", rows: 10, class: "w-full border rounded p-3 text-gray-700 focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="field mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">File</label>
      <%= form.file_field :file, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    

      <div class="flex justify-end">
        <%= form.submit "Save", class: "bg-indigo-800 text-white font-semibold py-2 px-4 rounded-lg mr-4" %>
        <%= link_to 'Batal', admin_lessons_path, class: "bg-indigo-800 text-white font-semibold py-2 px-4 rounded-lg" %>
      </div>
    <% end %>
  </div>
</div>
