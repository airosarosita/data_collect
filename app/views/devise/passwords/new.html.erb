<div class="flex">
  <!-- Image Section -->
  <div class="w-1/2 mt-12 ml-20 mr-10 bg-cover bg-center rounded-lg" style="background-image: url('<%= asset_path('bglogin.jpeg') %>');">
  </div>

  <!-- Form Section -->
  <div class="w-1/2 max-w-md p-8 rounded-lg ml-auto">
    <h2 class="text-3xl font-bold text-center mb-6 mt-10">Lupa Password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <div>
          <%= f.label :email, "Email", class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' %>
        </div>
      </div>

      <div class="flex items-center justify-end mt-4 ml-20 w-full">
        <%= f.submit "Send me reset password instructions", class: 'px-4 py-2 bg-blue-900 text-white font-semibold rounded-lg shadow-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
