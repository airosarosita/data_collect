<div class="flex">
  <!-- Image Section -->
  <div class="w-1/2 mt-12 ml-20 mb-20 bg-cover bg-center rounded-lg" style="background-image: url('<%= asset_path('bgsigup.jpeg') %>');">
  </div>

  <!-- Sign-Up Form Section -->
  <div class="w-1/2 max-w-md p-8 rounded-lg ml-auto mr-16">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
      <h2 class="text-3xl font-bold text-center mb-6">Buat Akun</h2>
      
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <div>
          <%= f.label :email, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600' %>
        </div>

        <div>
          <%= f.label :password, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <% if @minimum_password_length %>
            <em class="text-gray-600 text-sm">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600' %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600' %>
        </div>
      </div>

      <div class="actions mb-4">
        <%= f.submit "Daftar", class: "w-full text-white bg-indigo-900 py-2 rounded-lg transition duration-300" %>
      </div>
    <% end %>

    <!-- Additional Links -->
    <div class="text-center mt-4">
      <p class="text-sm text-gray-500">Sudah Memiliki Akun? <%= link_to "Masuk", new_session_path(resource_name), class: 'text-blue-500 hover:underline' %></p>
    </div>
  </div>
</div>
