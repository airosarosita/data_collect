<div class="flex justify-center items-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
      <h2 class="text-3xl font-bold text-center mb-6">Login</h2>
      
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-green-500 focus:border-green-500' %>
        </div>

        <div>
          <%= f.label :password, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-green-500 focus:border-green-500' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: 'form-checkbox' %>
            <%= f.label :remember_me, class: 'ml-2 text-gray-700 text-sm' %>
          </div>
        <% end %>
      </div>

      <div class="flex items-center justify-between mt-4">
        <%= f.submit "Login", class: 'w-full px-4 py-2 bg-green-600 text-white font-semibold rounded-lg shadow-md hover:bg-green-700 focus:outline-none focus:ring focus:ring-green-500 focus:border-green-500' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
      <p class="text-gray-700 text-sm">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-green-500 hover:underline' %></p>
    </div>
  </div>
</div>
