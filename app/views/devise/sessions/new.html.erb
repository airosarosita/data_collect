<div class="flex">
  <!-- Image Section -->
  <div class="w-1/2 mt-12 ml-20 bg-cover bg-center rounded-lg" style="background-image: url('<%= asset_path('bglogin.jpeg') %>');">
  </div>

  <!-- Form Section -->
  <div class="w-1/2 max-w-md p-8 rounded-lg ml-auto mr-16">
    <h2 class="text-3xl font-bold text-center mb-6">Selamat Datang</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, "Email", class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' %>
        </div>

        <div>
          <%= f.label :password, "Password", class: 'block text-gray-700 text-sm font-semibold mb-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: 'form-checkbox text-blue-500' %>
              <%= f.label :remember_me, "Remember me", class: 'ml-2 text-gray-700 text-sm' %>
            </div>
        <% end %>
      </div>

      <div class="flex items-center justify-end mt-4">
        <%= f.submit "Login", class: 'px-4 py-2 bg-indigo-900 text-white font-semibold rounded-lg shadow-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
      <p class="text-gray-700 text-sm">Belum Memiliki Akun? <%= link_to "Daftar", new_registration_path(resource_name), class: 'text-blue-500 hover:underline' %></p>
    </div>
  </div>
</div>
